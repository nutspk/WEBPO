<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>PO EDI System</title>
    <link href='https://fonts.googleapis.com/css?family=Roboto:400,100,100italic,300,300italic,400italic,500,500italic,700,700italic,900italic,900' rel='stylesheet' type='text/css'>

    <link href="~/js/plugin/datatables-bs4/css/dataTables.bootstrap4.css" rel="stylesheet" />
    <link href="~/js/plugin/datatables-responsive/css/responsive.bootstrap4.css" rel="stylesheet" />
    <link href="~/css/icons/font-awesome/css/fontawesome-all.css" rel="stylesheet" />
    <link href="~/js/plugin/icheck-bootstrap/icheck-bootstrap.css" rel="stylesheet" />
    <link href="~/js/plugin/select2/css/select2.min.css" rel="stylesheet" />
    <link href="~/js/plugin/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
    <link href="~/js/plugin/daterangepicker/daterangepicker.css" rel="stylesheet" />
    <link href="~/js/plugin/overlayScrollbars/css/OverlayScrollbars.css" rel="stylesheet" />

    <link href="~/css/theme/adminlte.min.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="~/css/site.css" />

</head>
<body class="hold-transition sidebar-mini layout-fixed layout-navbar-fixed layout-footer-fixed">
    <div id="wrapper">

        @await Html.PartialAsync("_Variables")

        @await Component.InvokeAsync("NavBar")

        @await Component.InvokeAsync("SideBar")

        <div class="content-wrapper">

            <!-- Content Header (Page header) -->
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h5 class="m-0">@ViewData["Title"]</h5>
                        </div><!-- /.col -->
                        <div class="col-sm-6">
                            @*<ol class="breadcrumb float-sm-right">
                                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                                    <li class="breadcrumb-item active">Dashboard v2</li>
                                </ol>*@
                        </div><!-- /.col -->
                    </div><!-- /.row -->
                </div><!-- /.container-fluid -->
            </div>
            <!-- /.content-header -->
            <section class="content">

                <div class="container-fluid">
                    @RenderBody()
                </div>
            </section>

        </div>

        <aside class="control-sidebar control-sidebar-dark">
        </aside>

        <footer class="main-footer">
            <strong>Copyright &copy; 2014-2020 <a href="https://adminlte.io">AdminLTE.io</a>.</strong>
            All rights reserved.
            <div class="float-right d-none d-sm-inline-block">
                <b>Version</b> 3.1.0-rc
            </div>
        </footer>
    </div>

    <script src="~/js/plugin/jquery/jquery.min.js"></script>
    <script src="~/js/plugin/bootstrap/js/bootstrap.bundle.js"></script>
    <script src="~/js/plugin/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/js/plugin/jquery-validation/jquery.validate.unobtrusive.min.js"></script>
    @*<script src="~/js/plugin/jquery-validation/jquery.validate-vsdoc.js"></script>*@
    <script src="~/js/plugin/jquery-ui/jquery-ui.min.js"></script>

    <script src="~/js/plugin/overlayScrollbars/js/jquery.overlayScrollbars.js"></script>
    <script src="~/js/plugin/moment/moment.min.js"></script>
    <script src="~/js/plugin/sweetalert2/sweetalert2.min.js"></script>
    <script src="~/js/plugin/select2/js/select2.full.min.js"></script>
    <script src="~/js/plugin/datatables/jquery.dataTables.js"></script>
    <script src="~/js/plugin/datatables-bs4/js/dataTables.bootstrap4.js"></script>
    <script src="~/js/plugin/datatables-responsive/js/dataTables.responsive.js"></script>
    <script src="~/js/plugin/datatables-responsive/js/responsive.bootstrap4.js"></script>
    <script src="~/js/plugin/daterangepicker/daterangepicker.js"></script>
    <script src="~/js/plugin/adminlte.min.js"></script>

    <script src="~/js/project.js" asp-append-version="true"></script>


    <script type="text/javascript">

        $(function () {
            initial();
        });

        function initial() {
            let url = window.location;
            $('ul.nav-sidebar a').filter(function () {
                return this.href == url;
            }).addClass('active');

            $('ul.nav-treeview a').filter(function () {
                return this.href == url;
            }).parentsUntil(".nav-sidebar > .nav-treeview")
                .css({ 'display': 'block' })
                .addClass('menu-open').prev('a')
                .addClass('active');
        }

        function logOut() {

            Swal.fire({
                title: 'Are you sure ?',
                text: 'Do you want to Log out',
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                confirmButtonText: 'Ok',
                cancelButtonColor: 'Cancel',
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = $('#RedirectToLogout').val();
                }
            });
        }

    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
