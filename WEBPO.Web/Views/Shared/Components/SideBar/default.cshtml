@model IEnumerable<MenuViewModel>
@{
    int i = 0;
    string[] icon = new string[] { "fas fa-database", "fas fa-cloud-download-alt", "fas fa-cog" };
}
<!-- Main Sidebar Container -->
<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <!-- Brand Logo -->
    <a href="@Url.Action("Index", "PublicMessage")" class="brand-link text-center skin-bg">
        <img src="https://www.ntn.co.jp/japan/images/logo.png" alt="Logo" class=" brand-image-sm float-none img-fluid">
        <span class="brand-text font-weight-light">&nbsp; </span>
    </a>

    <!-- Sidebar -->
    <div class="sidebar">
        <!-- Sidebar Menu -->
        <nav class="mt-3">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                @foreach (var category in Model)
                {
                    <li class="nav-item">
                        <a href="javascript:void(0)" class="nav-link">
                            <i class="nav-icon @Html.Raw( (i < 3) ? icon[i] : "fa-question")"></i>
                            <p>@category.MenuName <i class="right fas fa-angle-left"></i></p>
                        </a>
                        <ul class="nav nav-treeview">
                            @if (category.MenuList != null)
                            {
                                foreach (var menu in category.MenuList)
                                {
                                    <li class="nav-item">
                                        <a href="@Url.Content(menu.IUrl)" class="nav-link">
                                            <i class="far nav-icon"></i>
                                            <p>@menu.IFnName</p>
                                        </a>
                                    </li>
                                }
                            }
                        </ul>
                    </li>
                    i++;
                }
            </ul>
        </nav>
        <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
</aside>

