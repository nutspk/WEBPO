@model WEBPO.Domain.Entities.MS_VS

@{
    ViewData["Title"] = "Vendor Master";
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-route-id="@Model.IVsCd">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="form-group">
                <label class="control-label">Vendor Code</label>
                <input asp-for="IVsCd" class="form-control" />
                <span asp-validation-for="IVsCd" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Vendor Name</label>
                <input asp-for="IVsDesc" class="form-control" />
                <span asp-validation-for="IVsDesc" class="text-danger"></span>
            </div>
            <label asp-for="IEdiType" class="control-label">EDI Type</label>
            <select asp-for="IEdiType" class="form-control">
                <option value="00">NOT EDI</option>
                <option value="01">EDI</option>
            </select>
            <span asp-validation-for="IEdiType" class="text-danger"></span>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


@section scripts{

    <script type="text/javascript">

        $(function () {
            let errMsg = '@ViewBag.Error';
        if (errMsg !== '') {
            applicationAlert(errMsg);
        }
    });
    </script>

}

